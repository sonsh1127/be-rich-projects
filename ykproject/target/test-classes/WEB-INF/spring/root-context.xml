	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName"
			value="com.mysql.jdbc.Driver"></property>
		<property name="url" value="jdbc:mysql://localhost/ykproject"></property>
		<property name="username" value="root"></property>
		<property name="password" value="1q2w3e4r"></property>
	</bean>

	<bean id="sqlSessionFactory"
		class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="typeAliasesPackage"
			value="kr.co.circlenine.model"></property>
		<property name="mapperLocations"
			value="classpath:kr/co/circlenine/dao/mapper/**/*.xml"></property>
	</bean>

	<bean id="insureDao"
		class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="sqlSessionFactory" ref="sqlSessionFactory"></property>
		<property name="mapperInterface"
			value="kr.co.circlenine.dao.InsuranceDao"></property>
	</bean>
	<bean id="insureAnswerDao"
		class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="sqlSessionFactory" ref="sqlSessionFactory"></property>
		<property name="mapperInterface"
			value="kr.co.circlenine.dao.InsureAnswerDao"></property>
	</bean>
	<bean id="insureQuestionDao"
		class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="sqlSessionFactory" ref="sqlSessionFactory"></property>
		<property name="mapperInterface"
			value="kr.co.circlenine.dao.InsureQuestionDao"></property>
	</bean>
	<bean id="memberDao"
		class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="sqlSessionFactory" ref="sqlSessionFactory"></property>
		<property name="mapperInterface"
			value="kr.co.circlenine.dao.MemberDao"></property>
	</bean>

